[flake8]
max-line-length = 88
# Temporarily ignore line length and whitespace issues across the codebase
extend-ignore = E203,E501,W292,W293
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .eggs,
    *.egg,
    tests/*,
    examples/*,
    dependabot_check/*

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,F403
    # Ignore issues in these files temporarily
    **/vulnerabilities/aggregator_async.py:F401,W292,W293,E303
    **/vulnerabilities/aggregator.py:W292,W293
    **/async_http.py:W292,F401
    **/config.py:F821