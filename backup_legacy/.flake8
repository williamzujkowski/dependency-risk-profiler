[flake8]
max-line-length = 88
# Temporarily ignore line length, whitespace and comment spacing issues across the codebase
extend-ignore = E203,E501,W292,W293,W291,E128,E129,E302,E261
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .eggs,
    *.egg,
    tests/*,
    examples/*,
    dependabot_check/*

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,F403
    # Ignore issues in these files temporarily
    **/vulnerabilities/aggregator_async.py:F401,W292,W293,E303
    **/vulnerabilities/aggregator.py:W292,W293,E302
    **/async_http.py:W292,F401
    **/config.py:F821
    **/transitive/analyzer_enhanced.py:F401
    **/cli/typer_cli.py:F401
    **/parsers/base.py:F401
    **/parsers/registry.py:F401
    **/parsers/toml.py:F401
    ./setup.py:E261
    **/models.py:E261